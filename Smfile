all {
        %CC cqotdd-tcp tcp.c
        %CC cqotdd-udp udp.c
}

clean {
        !rm -f cqotdd-tcp cqotdd-udp
}

install root (all) {
        !cp -f cqotdd-tcp /usr/local/bin/cqotdd-tcp
        !cp -f cqotdd-udp /usr/local/bin/cqotdd-udp
        ![ "$(cat /proc/1/comm)" = "systemd" ] && { cp cqotdd-tcp.service /etc/systemd/system/cqotdd-tcp.service ; cp cqotdd-udp.service /etc/systemd/system/cqotdd-udp.service ; }
}

test root (all) {
        !python3 test.py
}
